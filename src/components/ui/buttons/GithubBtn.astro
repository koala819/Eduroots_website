---
import Icon from "@components/ui/icons/Icon.astro";
const { title, url } = Astro.props;

interface Props {
  title?: string;
  url?: string;
}

const baseClasses =
  "group inline-flex items-center justify-center gap-x-3 rounded-lg px-4 py-3 text-center text-sm font-medium ring-zinc-500 focus-visible:ring-3 transition duration-300 outline-hidden";
const borderClasses = "border border-neutral-200 dark:border-neutral-700";
const bgColorClasses = "bg-neutral-300 dark:bg-zinc-700";
const textClasses = "text-neutral-600 dark:text-neutral-300";
const hoverClasses = "hover:bg-neutral-400/50 dark:hover:bg-zinc-600 hover:text-neutral-600 dark:hover:text-neutral-200";
const fontSizeClasses = "2xl:text-base";
const ringClasses = "ring-zinc-500 dark:ring-zinc-200";
---

<a
  class={`${baseClasses} ${borderClasses} ${bgColorClasses} ${textClasses} ${hoverClasses} ${fontSizeClasses} ${ringClasses}`}
  href={url}
  target="_blank"
  rel="noopener noreferrer"
>
  <Icon name="github" />
  {title}
</a>
