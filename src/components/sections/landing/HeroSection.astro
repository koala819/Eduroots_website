---
import { Image } from "astro:assets";
import PrimaryCTA from "@components/ui/buttons/PrimaryCTA.astro";
import SecondaryCTA from "@components/ui/buttons/SecondaryCTA.astro";
import ReviewComponent from "@components/ui/blocks/ReviewComponent.astro";
import mobileImage from "@/images/eduroots-tableau-bord-administratif-mobile.webp";

const {
  title,
  subTitle,
  primaryBtn,
  primaryBtnURL,
  secondaryBtn,
  secondaryBtnURL,
  withReview,
  starCount,
  rating,
  reviews,
} = Astro.props;

interface Props {
  title: string;
  subTitle?: string;
  primaryBtn?: string;
  primaryBtnURL?: string;
  secondaryBtn?: string;
  secondaryBtnURL?: string;
  withReview?: boolean;
  avatars?: Array<string>;
  starCount?: number;
  rating?: string;
  reviews?: string;
  src?: any;
  alt?: string;
}
---

<!-- Grid container avec texte à gauche et image à droite -->
<section
  class="mx-auto  px-4 py-14 sm:px-6 md:gap-8 lg:px-8"
>
  <div class="grid lg:grid-cols-2 gap-8 items-center">
    <!-- Colonne de gauche : Texte et boutons -->
    <aside class="text-left">
      <h1
        class="block text-balance text-3xl font-bold tracking-tight text-neutral-800 dark:text-neutral-200 sm:text-4xl lg:text-5xl lg:leading-tight"
      >
        <Fragment set:html={title} />
      </h1>
      {subTitle &&
      <p
        class="mt-3 text-pretty text-lg leading-relaxed text-neutral-700 dark:text-neutral-400"
      >
        {subTitle}
      </p>
    }
      <!-- Action Button Section -->
      <div class="mt-7 grid w-full gap-3 sm:inline-flex">
        {primaryBtn &&
        <PrimaryCTA title={primaryBtn} url={primaryBtnURL} />
        }
        {secondaryBtn &&
        <SecondaryCTA title={secondaryBtn} url={secondaryBtnURL} />
        }
      </div>
    </aside>

    <!-- Colonne de droite : Image -->
    <aside class="flex flex-col">
          <picture class="w-full">
            <Image
              src={mobileImage}
              alt="Interface mobile Eduroots pour la gestion scolaire"
              widths={[150, 300, 600]}
              sizes="100vw"
              quality={100}
              format="webp"
              loading="eager"
              class="w-full h-auto"
            />
          </picture>
           { withReview ? (
  <div class="flex justify-center">
    <ReviewComponent starCount={starCount} rating={rating} reviews={reviews} />
  </div>
  ) : "" }
    </aside>
  </div>
</section>
