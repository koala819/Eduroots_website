---
import MainLayout from "@/layouts/MainLayout.astro";
import ContactSection from "@components/sections/misc/ContactSection.astro";

const pageTitle: string = "Contact | Eduroots";
const metaDescription =
  "Vous avez des questions sur Eduroots ? Contactez-moi pour discuter de la mise en place de notre solution dans votre mosquée.";
const ogTitle = "Contact | Eduroots";
---

<MainLayout
  title={pageTitle}
  customDescription={metaDescription}
  customOgTitle={ogTitle}
  structuredData={{
    "@context": "https://schema.org",
    "@type": "WebPage",
    "@id": "https://eduroots.org/contact",
    url: "https://eduroots.org/contact",
    name: "Contact | Eduroots",
    description:
      "Vous avez des questions sur Eduroots ? Contactez-moi pour discuter de la mise en place de notre solution dans votre mosquée.",
    isPartOf: {
      "@type": "WebSite",
      url: "https://eduroots.org",
      name: "Eduroots",
      description:
        "Eduroots simplifie la gestion scolaire des mosquées avec des outils pensés pour les enseignants, parents et administrateurs.",
    },
  }}
>
  <ContactSection />
</MainLayout>
